# .env - הגדרות סביבה עם זמני תוקף

# הגדרות בסיסיות
SECRET_KEY=your-super-secret-key-change-this-in-production-12345
DATABASE_URL=sqlite:///./app.db
BOOKS_PATH=/app/output
LOG_LEVEL=INFO

# ⏰ הגדרות זמני תוקף (בדקות)
ACCESS_TOKEN_EXPIRE_MINUTES=30        # משתמש רגיל - 30 דקות
ADMIN_TOKEN_EXPIRE_MINUTES=120        # מנהל - 2 שעות  
PREMIUM_TOKEN_EXPIRE_MINUTES=480      # עם "זכור אותי" - 8 שעות
API_TOKEN_EXPIRE_MINUTES=1440         # קליינט API - 24 שעות
REFRESH_TOKEN_EXPIRE_DAYS=7           # Refresh token - 7 ימים

# הגדרות אבטחה נוספות
MAX_LOGIN_ATTEMPTS=5                  # מספר ניסיונות התחברות מקסימלי
LOGIN_COOLDOWN_MINUTES=15             # זמן המתנה אחרי כישלונות
REQUIRE_STRONG_PASSWORDS=true         # האם לדרוש סיסמאות חזקות

# הגדרות CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# הגדרות קבצים
MAX_FILE_SIZE=100                     # מגה-בייט
ALLOWED_FILE_EXTENSIONS=.pdf,.txt     # סוגי קבצים מותרים

# הגדרות פאגינציה
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# הגדרות ניקוי אוטומטי
AUTO_CLEANUP_ENABLED=true             # האם לנקות קבצים ישנים אוטומטית
CLEANUP_AFTER_DAYS=30                 # מחק קבצים אחרי כמה ימים
CLEANUP_SCHEDULE=0 2 * * *             # זמן ריצה יומי (2:00 AM)

# דוגמאות להגדרות שונות:
